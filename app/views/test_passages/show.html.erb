<h1>Pass '<%= @test_passage.test.title %>' Test</h1>

<p>Количество вопросов: <%= @test_passage.test.questions.count%></p>
<p>Номер текущего вопроса: <%=@test_passage.current_question_number %></p>

<b><%= @test_passage.current_question.body %></b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids,
                                  @test_passage.current_question.answers,
                                  :id,
                                  :body,
                                  include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= link_to 'Gist Question', test_passage_gists_path(@test_passage), method: :post %></p>
  <p><%= form.submit 'Next' %></p>
<% end %>

