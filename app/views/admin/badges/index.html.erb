<div class="row">
  <h1><%= t('.header') %></h1>

  <%= link_to t('.new_badge_link'), new_admin_badge_path %>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th class="col text-center"><%= t('.id') %></th>
        <th class="col text-center">
          <%= t('.name') %>
        </th>
        <th class="col text-center"><%= t('.description')%></th>
        <th class="col text-center"><%= t('.rule_type')%></th>
        <th class="col text-center"><%= t('.rule_value')%></th>
        <th class="col text-center"><%= t('.image')%></th>
        <th class="col text-center" colspan="2"><%= t('.actions')%></th>
      </tr>
    </thead>

    <tbody>
      <%= render @badges %>
    </tbody>
  </table>
</div>
