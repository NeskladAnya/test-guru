<tbody>
  <tr>
    <td class="align-middle">
      <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id }%>
      <%= render 'form_inline', test: test == @test ? @test : test %>
    </td>
    <td class="text-center"><%= test.questions.count %></td>
    <td class="text-center"><%= link_to t('actions.show'), admin_test_path(test) %></td>
    <td class="text-center"><%= link_to t('actions.edit'), edit_admin_test_path(test),
                                class: 'form-inline-link',
                                data: { test_id: test.id } %></td>
    <td class="text-center">
      <%= link_to t('actions.delete'),
                  admin_test_path(test),
                  method: :delete,
                  data: {confirm: t('actions.confirm')} %>
    </td>
  </tr>
</tbody>
